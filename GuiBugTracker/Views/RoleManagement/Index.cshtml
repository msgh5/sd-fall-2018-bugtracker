@model List<UserViewModel>


@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<table class="grid-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@string.Join(",", user.UserRoles)</td>
            <td><a href="@Url.Action("ManageRoles", "RoleManagement", new { id = user.Id })">Change roles</a></td>
        </tr>
        }
    </tbody>
</table>